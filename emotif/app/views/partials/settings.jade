extends ../index

block pageContent
  .bar.bar-header.bar-emotif
    a.button.button-clear.icon.ion-ios7-arrow-back(href='/select')
    h1.title.bar-title Emotif

  .scroll-content.has-header.has-tabs.overflow-scroll
   .card
    .list
      .item.item-divider
        p User Acount
      a.item.item-icon-left#changeName
        i.icon.ion-ios7-person
        p Change Name
      a.item.item-icon-left#changePassword
        i.icon.ion-ios7-locked
        p Change Password

      .item.item-divider
        p Content Tuning
      //- a.item.item-icon-left(href='#')
      ul.list
        li.item.item-toggle Content Filtering
          label.toggle
            input(type='checkbox')
            .track
              .handle
        li.item.item-toggle Interest Analysis
          label.toggle
            input(type='checkbox')
            .track
              .handle
    .content-bottom-spacer

    .padding
      button.button.button-block.button-assertive#settings-logout-button Log Out

  .tabs.tabs-icon-top
    a.tab-item(href="/content")
      i.icon.ion-ios7-albums-outline
      p Content
    a.tab-item(href="/trend")
      i.icon.ion-ios7-speedometer-outline
      p Trend
    a.tab-item
      i.icon.ion-ios7-gear
      p Settings

block js
