extends ../index

block pageContent
  .bar.bar-header.bar-emotif
    a.button.button-clear.icon.ion-ios7-arrow-back(href='/select')
    h1.title.bar-title Emotif

  .scroll-content.has-header.has-tabs.overflow-scroll
   .card
    .list
      .item.item-divider
       p Description
      a.item.item-icon-left
       p All about you
        input(type='text', placeholder='Tell us about youself')
      a.item.item-icon-left
       p Personality Traits
        input(type='text', placeholder='Extroverted/Introverted/Strength/Weakness...')
      a.item.item-icon-left
       p Favorite Color
        input(type='text', placeholder='Color of Life')
      a.item.item-icon-left
       p Favorite Quote
        input(type='text', placeholder='It always inspires and movtivates you')

    .content-bottom-spacer

    .padding
      button.button.button-block.button-assertive#settings-save-button Save
      button.button.button-block.button-assertive#settings-skipDescription-button Skip

   .tabs.tabs-icon-top
          a.tab-item(href="/select")
            i.icon.ion-ios7-sunny-outline.active
            p Select
          a.tab-item(href="/trend")
            i.icon.ion-ios7-speedometer
            p Trend
          a.tab-item(href="/settings")
            i.icon.ion-ios7-gear-outline
            p Settings

block js
  script(src="/js/settings.js")