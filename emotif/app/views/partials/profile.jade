extends ../index

block pageContent
  .bar.bar-header.bar-emotif
    a.button.button-clear.icon.ion-ios7-arrow-back(href='/select')
    h1.title.bar-title Emotif

  .scroll-content.has-header.has-tabs.overflow-scroll
   .card
    .list
      .item.item-divider
       p Travels
      a.item.item-icon-left#changeName
       p Past Travel Experiences
        input(type='text', placeholder='Where have you visited?')
      a.item.item-icon-left#changeName
       p Future Travel Plans
        input(type='text', placeholder='Where are you going to visit?')
      a.item.item-icon-left#changeName
       p Dream Places
        input(type='text', placeholder='The world is so big!')

    .content-bottom-spacer

    .padding
      button.button.button-block.button-assertive#settings-logout-button Save

   .tabs.tabs-icon-top
          a.tab-item#nav-select
            i.icon.ion-ios7-sunny-outline
            p Select
          a.tab-item#nav-trend
            i.icon.ion-ios7-speedometer-outline
            p Trend
          a.tab-item
            i.icon.ion-ios7-gear
            p Settings

block js
  script(src="/js/settings.js")